[color]
  ui = true
[color "status"]
  added = green bold
  changed = magenta bold
  untracked = red bold
[push]
  default = tracking
[core]
  editor = emacsclient -nw
[alias]
  st = status -uall -b
  rup = remote update --prune
  ffm = merge --ff-only
  uff = !sh -c 'git rup && git ffm'
	destroy = reset --hard
	pulr = pull --rebase
[rerere]
  enabled = 1
[diff]
  tool = vimdiff
  algorithm = histogram

