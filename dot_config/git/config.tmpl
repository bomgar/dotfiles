# vim: filetype=gitconfig

[user]
  name = {{ .user.name | quote }}
  email = {{ .user.email | quote }}

[color]
  ui = true

[color "status"]
  added = green bold
  changed = magenta bold
  untracked = red bold

[push]
  default = tracking

[core]
  editor = nvim
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
    syntax-theme = Catppuccin-mocha

[alias]
  st = status -uall -b
  rup = remote update --prune
  ffm = merge --ff-only
  uff = !sh -c 'git rup && git ffm'
  destroy = reset --hard
  pulr = pull --rebase
  co = checkout
  sur = submodule update --remote
  surr = submodule update --remote --recursive
  gcallthethings = -c gc.reflogExpire=0 -c gc.reflogExpireUnreachable=0 -c gc.rerereresolved=0 -c gc.rerereunresolved=0 -c gc.pruneExpire=now gc
  rootcd = rev-parse --show-toplevel
  force-push = push --force-if-includes --force-with-lease

[rerere]
  enabled = 1

[diff]
  tool = vimdiff
  algorithm = histogram

[web]
  browser = firefox

[status]
  submoduleSummary = true
[pull]
  rebase = true

# [url "git@github.com:"]
#   insteadOf = https://github.com/
[magit]
  hideCampaign = true
[commit]
  gpgsign = true
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[init]
  defaultBranch = main


[tig "color"]
  # A strange looking cursor line
  cursor    = white  black bold
